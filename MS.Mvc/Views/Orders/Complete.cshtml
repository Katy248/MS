@using MS.Mvc.Interfaces.Orders;
@inject IViewLocalizer Localizer
@model CompleteOrderViewModel
@{
    ViewData["Title"] = "Выполнить";
}
<div class="row mb-3">
    @foreach (var element in Model.Elements)
    {
        <div class="col-2">
            <div class="card">
                <div class="card-body">
                    <div>@element.Product.Name</div>
                    <div>@element.Count @element.Product.MeasurementUnitAbbreviation</div>
                    
                </div>
            </div>
        </div>
    }
</div>
<form asp-action="Complete" method="post">
    <input asp-for="Id" hidden/>
    <div class="form-group mb-2">
        <label class="form-label">Адрес<span class="text-danger">*</span></label>
        <input class="form-control" asp-for="Address" />
    </div>
    <div class="form-group mb-2">
        <label class="form-label">Коментарий</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
    </div>
    <div class="form-group mb-2">
        <button class="btn-success btn form-control">
            Создать
        </button>
    </div>
</form>