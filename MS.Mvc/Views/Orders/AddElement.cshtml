@inject IViewLocalizer Localizer
@model OrderElementViewModel
@{
    ViewData["Title"] = "";
}
<form asp-action="EditElement" method="post">
    <div class="form-group mb-2">
        <select class="form-control" asp-for="ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))"></select>
    </div>
    <div class="form-group mb-2">
        <input class="form-control" type="number" asp-for="Count" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">
            Добавить
        </button>
    </div>
</form>