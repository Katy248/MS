@inject IViewLocalizer Localizer
@model EditProductViewModel
@{
    ViewData["Title"] = "";
}
<form asp-action="Edit" method="post">
    <input asp-for="Id" hidden/>
    <div class="form-group mb-2">
        <label class="form-label">@Localizer["Название"]</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group mb-2">
        <label class="form-label">@Localizer["Мера измерения"]</label>
        <input class="form-control" asp-for="MeasurementUnit" />
    </div>
    <div class="form-group mb-2">
        <label class="form-label">@Localizer["Аббревиатура"]</label>
        <input class="form-control" asp-for="MeasurementUnitAbbreviation" />
    </div>
    <div class="form-group mb-2">
        <button class="btn btn-success" type="submit">
            @Localizer["Сохранить"]
        </button>
    </div>
</form>