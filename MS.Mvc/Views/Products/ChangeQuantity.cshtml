@inject IViewLocalizer Localizer
@model ChangeQuantityProductViewModel
@{
    ViewData["Title"] = "";
}
<form asp-action="ChangeQuantity" method="post">
    <input asp-for="Id" hidden/>

    <div class="form-group mb-2">
        <label class="form-label">@Localizer["Add products"]</label>
        <div class="row">
            <div class="col">
                <input class="form-control d-inline" asp-for="ChangeAmount" type="number" />
            </div>
            <div class="col">
                <input class="btn text-start form-control" asp-for="Product.MeasurementUnitAbbreviation"/>
            </div>
        </div>
    </div>
    <div class="form-group mb-2">
        <button class="btn btn-success" type="submit">
            @Localizer["Save"]
        </button>
    </div>
</form>