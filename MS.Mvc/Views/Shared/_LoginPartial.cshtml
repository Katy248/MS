@using Microsoft.AspNetCore.Identity
@inject IViewLocalizer Localizer
@inject SignInManager<MSUser> SignInManager
@inject UserManager<MSUser> UserManager

<ul class="list-group list-group-horizontal">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="list-group-item">
            <a class="nav-link btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@Localizer["User"]: @User.Identity?.Name</a>
        </li>
        <li class="list-group-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn link-danger">@Localizer["Logout"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="list-group-item">
            <a class="nav-link" asp-controller="Users" asp-action="Login">@Localizer["Login"]</a>
        </li>
        <li class="list-group-item">
            <a class="nav-link" asp-controller="Users" asp-action="Register">@Localizer["Register"]</a>
        </li>
    }
</ul>
