@inject IViewLocalizer Localizer
@model IEnumerable<MSUser>
@{
    ViewData["Title"] = "";
}
<div class="row g-2 justify-content-center">
    @foreach (var user in Model)
    {
        <div class="col-7">
            <div class="card">
                <div class="card-body">
                    <div>@user.UserName</div>
                    <div class="form-check">
                        <label class="form-check-label" for="@user.Id">@Localizer["Is employee"]</label>
                        <input class="form-check-input" type="checkbox" checked="@user.IsEmployee" id="@user.Id" disabled/>
                    </div>
                    <a class="btn btn-success form-control" asp-action="Edit" asp-route-id="@user.Id">@Localizer["Edit"]</a>
                </div>
            </div>
        </div>
    }
</div>